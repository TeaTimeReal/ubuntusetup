#!/usr/bin/env bash

InstallDocker(){
  # Install docker
  sudo apt install apt-transport-https ca-certificates curl software-properties-common
  curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg --yes
  echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
  
  sudo apt update
  apt-cache policy docker-ce
  sudo apt install docker-ce
  
  # Run docker without sudo. Trust me, you want this.
  sudo usermod -aG docker ${USER}
}

InstallNode(){
  # Install Node v18.17.1 and npm
  apt install nodejs
  apt install npm
  npm install -g n 
  n 18.17.1
}

InstallGuestAdditions(){
  # Virtual Box Guest Additions - to copy/paste and use shared folder between host and guest.
  apt install build-essential
  
  sudo apt-get install virtualbox-guest-additions-iso
}

InstallVsCode(){
  # Install Visual Code
  sudo snap install --classic code # or code-insiders
}

InstallIfconfig(){
  # Install ifconfig
  apt install net-tools
}

SetupFirewallAllowSsh(){
  # Enable and set firewall to allow ssh
  ufw enable
  ufw allow ssh
}

main(){
  sudo apt update
  sudo apt upgrade
  
  InstallDocker
  
  InstallNode
  
  InstallIfconfig
  
  SetupFirewallAllowSsh

  InstallVsCode
  
  InstallGuestAdditions
}


yes | main


tput rmam # this turns line wrapping off to display the text pretty
echo "
